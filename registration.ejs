<div class="half-layout">
    <div class="half-layout_column">
        <img src="img/login/kurt1.jpg" class="half-layout_cover" />
    </div>
    <div class="half-layout_column __main">
        <div class="half-layout_header">
            <a href="./login" class="half-layout_header-left">Вход ↳</a>
            <a href="./" class="half-layout_header-right">Закрыть</a>
        </div>
        
        <form>
            <div class="form_i">
                <label class="label-block" for="name">Имя</label>
                <%- partial("_partials/_base-input", {
                    id: "name",
                    type: "text"
                }); %>
            </div>

            <div class="form_i">
                <label class="label-block" for="surname">Фамилия</label>
                <%- partial("_partials/_base-input", {
                    id: "surname",
                    type: "text"
                }); %>
            </div>

            <div class="form_i">
                <label class="label-block" for="email">E-mail</label>
                <%- partial("_partials/_base-input", {
                    id: "email",
                    type: "email"
                }); %>
            </div>

            <div class="form_i">
                <label class="label-block" for="password">Пароль</label>
                <%- partial("_partials/_base-input", {
                    id: "password",
                    type: "password"
                }); %>

                <div class="email-confirmation">
                    <input type="checkbox" checked="checked" id="email-confirmation" />
                    <label class="label-inline" for="email-confirmation">Отправить эти данные по электронной почте</label>
                </div>
            </div>

            <div class="form_i">
                <button type="submit" class="button">РЕГИСТРАЦИЯ</button>
            </div>
        </form>
    </div>
</div>